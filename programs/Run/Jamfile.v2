project run
        : default-build release
	: usage-requirements <include>/usr/local/include/gnuradar
        ;

exe gradar-run 
        : GnuRadarRun.cxx ProducerThread.cxx ConsumerThread.cxx 
        : <variant>release
        : <cxxflags>"-std=gnu++0x -O2 -msse3 -march=athlon-xp -fomit-frame-pointer -pipe"
          <linkflags>"-lrt -lpthread -lusb -lusrp -lhdf5_hl_cpp -lhdf5_cpp"
        ;

install ../../bin : gradar-run ;  
